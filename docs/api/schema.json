{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hyperliquid Trading Bot WebSocket API",
  "description": "Schema for events broadcasted by the trading bot via WebSocket.",
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/definitions/ConfigEvent"
    },
    {
      "$ref": "#/definitions/SpotGridSummaryEvent"
    },
    {
      "$ref": "#/definitions/PerpGridSummaryEvent"
    },
    {
      "$ref": "#/definitions/GridStateEvent"
    },
    {
      "$ref": "#/definitions/OrderUpdateEvent"
    },
    {
      "$ref": "#/definitions/MarketUpdateEvent"
    },
    {
      "$ref": "#/definitions/ErrorEvent"
    }
  ],
  "definitions": {
    "ConfigEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "config"
        },
        "data": {
          "$ref": "#/definitions/StrategyConfig"
        }
      },
      "required": ["event_type", "data"]
    },
    "SpotGridSummaryEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "spot_grid_summary"
        },
        "data": {
          "$ref": "#/definitions/SpotGridSummary"
        }
      },
      "required": ["event_type", "data"]
    },
    "PerpGridSummaryEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "perp_grid_summary"
        },
        "data": {
          "$ref": "#/definitions/PerpGridSummary"
        }
      },
      "required": ["event_type", "data"]
    },
    "GridStateEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "grid_state"
        },
        "data": {
          "$ref": "#/definitions/GridState"
        }
      },
      "required": ["event_type", "data"]
    },
    "OrderUpdateEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "order_update"
        },
        "data": {
          "$ref": "#/definitions/OrderEvent"
        }
      },
      "required": ["event_type", "data"]
    },
    "MarketUpdateEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "market_update"
        },
        "data": {
          "$ref": "#/definitions/MarketEvent"
        }
      },
      "required": ["event_type", "data"]
    },
    "ErrorEvent": {
      "type": "object",
      "properties": {
        "event_type": {
          "const": "error"
        },
        "data": {
          "type": "string"
        }
      },
      "required": ["event_type", "data"]
    },
    "StrategyConfig": {
      "type": "object",
      "oneOf": [
        {
          "title": "Spot Grid Config",
          "required": [
            "type",
            "symbol",
            "upper_price",
            "lower_price",
            "grid_type",
            "grid_count",
            "total_investment"
          ],
          "properties": {
            "type": {
              "const": "spot_grid"
            },
            "symbol": {
              "type": "string"
            },
            "upper_price": {
              "type": "number"
            },
            "lower_price": {
              "type": "number"
            },
            "grid_type": {
              "enum": ["arithmetic", "geometric"]
            },
            "grid_count": {
              "type": "integer",
              "minimum": 2
            },
            "total_investment": {
              "type": "number"
            },
            "trigger_price": {
              "type": ["number", "null"]
            }
          }
        },
        {
          "title": "Perp Grid Config",
          "required": [
            "type",
            "symbol",
            "leverage",
            "upper_price",
            "lower_price",
            "grid_type",
            "grid_count",
            "total_investment",
            "grid_bias"
          ],
          "properties": {
            "type": {
              "const": "perp_grid"
            },
            "symbol": {
              "type": "string"
            },
            "leverage": {
              "type": "integer",
              "minimum": 1
            },
            "is_isolated": {
              "type": "boolean",
              "default": false
            },
            "upper_price": {
              "type": "number"
            },
            "lower_price": {
              "type": "number"
            },
            "grid_type": {
              "enum": ["arithmetic", "geometric"]
            },
            "grid_count": {
              "type": "integer",
              "minimum": 2
            },
            "total_investment": {
              "type": "number",
              "description": "Notional Value (Position Size)"
            },
            "grid_bias": {
              "enum": ["long", "short", "neutral"]
            },
            "trigger_price": {
              "type": ["number", "null"]
            }
          }
        }
      ]
    },
    "SpotGridSummary": {
      "type": "object",
      "required": [
        "symbol",
        "price",
        "state",
        "position_size",
        "avg_entry_price",
        "realized_pnl",
        "unrealized_pnl",
        "total_fees",
        "grid_count",
        "range_low",
        "range_high",
        "grid_spacing_pct",
        "roundtrips",
        "base_balance",
        "quote_balance"
      ],
      "properties": {
        "symbol": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "state": {
          "type": "string",
          "description": "Strategy state: Initializing, Running, AcquiringAssets, WaitingForTrigger"
        },
        "position_size": {
          "type": "number",
          "description": "Base asset inventory"
        },
        "avg_entry_price": {
          "type": "number"
        },
        "realized_pnl": {
          "type": "number"
        },
        "unrealized_pnl": {
          "type": "number"
        },
        "total_fees": {
          "type": "number"
        },
        "grid_count": {
          "type": "integer"
        },
        "range_low": {
          "type": "number"
        },
        "range_high": {
          "type": "number"
        },
        "grid_spacing_pct": {
          "type": "array",
          "description": "Grid spacing as percentage (min%, max%). Same values for geometric, different for arithmetic",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "roundtrips": {
          "type": "integer",
          "description": "Completed buyâ†’sell cycles"
        },
        "base_balance": {
          "type": "number"
        },
        "quote_balance": {
          "type": "number"
        }
      }
    },
    "PerpGridSummary": {
      "type": "object",
      "required": [
        "symbol",
        "price",
        "state",
        "position_size",
        "position_side",
        "avg_entry_price",
        "realized_pnl",
        "unrealized_pnl",
        "total_fees",
        "leverage",
        "grid_bias",
        "grid_count",
        "range_low",
        "range_high",
        "grid_spacing_pct",
        "roundtrips",
        "margin_balance"
      ],
      "properties": {
        "symbol": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "state": {
          "type": "string"
        },
        "position_size": {
          "type": "number",
          "description": "Positive = Long, Negative = Short"
        },
        "position_side": {
          "type": "string",
          "enum": ["Long", "Short", "Flat"]
        },
        "avg_entry_price": {
          "type": "number"
        },
        "realized_pnl": {
          "type": "number"
        },
        "unrealized_pnl": {
          "type": "number"
        },
        "total_fees": {
          "type": "number"
        },
        "leverage": {
          "type": "integer"
        },
        "grid_bias": {
          "type": "string",
          "enum": ["Long", "Short", "Neutral"]
        },
        "grid_count": {
          "type": "integer"
        },
        "range_low": {
          "type": "number"
        },
        "range_high": {
          "type": "number"
        },
        "grid_spacing_pct": {
          "type": "array",
          "description": "Grid spacing as percentage (min%, max%). Same values for geometric, different for arithmetic",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "roundtrips": {
          "type": "integer"
        },
        "margin_balance": {
          "type": "number"
        }
      }
    },
    "GridState": {
      "type": "object",
      "required": ["symbol", "strategy_type", "current_price", "zones"],
      "properties": {
        "symbol": {
          "type": "string"
        },
        "strategy_type": {
          "type": "string",
          "enum": ["spot_grid", "perp_grid"]
        },
        "current_price": {
          "type": "number"
        },
        "grid_bias": {
          "type": ["string", "null"],
          "description": "null for spot, 'Long'/'Short'/'Neutral' for perp"
        },
        "zones": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ZoneInfo"
          }
        }
      }
    },
    "ZoneInfo": {
      "type": "object",
      "required": [
        "index",
        "lower_price",
        "upper_price",
        "size",
        "pending_side",
        "has_order",
        "is_reduce_only",
        "action_label",
        "action_type",
        "entry_price",
        "roundtrip_count"
      ],
      "properties": {
        "index": {
          "type": "integer"
        },
        "lower_price": {
          "type": "number"
        },
        "upper_price": {
          "type": "number"
        },
        "size": {
          "type": "number"
        },
        "pending_side": {
          "type": "string",
          "enum": ["Buy", "Sell"]
        },
        "has_order": {
          "type": "boolean"
        },
        "is_reduce_only": {
          "type": "boolean",
          "description": "true for closing orders in perp"
        },
        "action_label": {
          "type": "string",
          "description": "Human-readable action: Buy, Sell, Open Long, Close Long, Open Short, Close Short"
        },
        "action_type": {
          "type": "string",
          "enum": ["open", "close"],
          "description": "For frontend styling"
        },
        "entry_price": {
          "type": "number"
        },
        "roundtrip_count": {
          "type": "integer"
        }
      }
    },
    "OrderEvent": {
      "type": "object",
      "required": ["oid", "side", "price", "size", "status", "fee"],
      "properties": {
        "oid": {
          "type": "integer",
          "minimum": 0
        },
        "cloid": {
          "type": ["string", "null"]
        },
        "side": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "size": {
          "type": "number"
        },
        "status": {
          "type": "string"
        },
        "fee": {
          "type": "number"
        }
      }
    },
    "MarketEvent": {
      "type": "object",
      "required": ["price"],
      "properties": {
        "price": {
          "type": "number"
        }
      }
    }
  }
}
